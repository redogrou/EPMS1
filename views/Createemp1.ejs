document.querySelectorAll('.edit-icon').forEach(function(editIcon) {
    editIcon.addEventListener('click', function(event) {
        event.preventDefault();
        // Find the parent row of the clicked edit icon
        var row = event.target.closest('tr');
        // Retrieve data from the row
        var empname = row.cells[2].textContent;
        var branchcode = row.cells[3].textContent;
        var branchname = row.cells[4].textContent;
        var subgroup = row.cells[5].textContent;
        var indexnum = row.cells[6].textContent;
        var emailid = row.cells[7].textContent;
        var monum = row.cells[8].textContent;
        // Populate form fields with retrieved data
        document.getElementById('empname').value = empname;
        document.getElementById('branch').value = branchcode;
        document.getElementById('branchname').value = branchname;
        document.getElementById('monum').value = monum;
        document.getElementById('emailid').value = emailid;
        document.getElementById('subgroup').value = subgroup;
        document.getElementById('indexnum').value = indexnum;
    });
});

// Function to update table row with form data
function updateForm() {
    var form = document.getElementById('emp_form');
    var empname = form.elements['empname'].value;
    var branchcode = form.elements['branchcode'].value;
    var branchname = form.elements['branchname'].value;
    var monum = form.elements['monum'].value;
    var emailid = form.elements['emailid'].value;
    var subgroup = form.elements['subgroup'].value;
    var indexnum = form.elements['indexnum'].value;

    // Find the currently edited row
    var editedRow = document.querySelector('.table_tr1');

    // Update the corresponding row in the table with the new data from the form
    editedRow.cells[2].textContent = empname;
    editedRow.cells[3].textContent = branchcode;
    editedRow.cells[4].textContent = branchname;
    editedRow.cells[5].textContent = subgroup;
    editedRow.cells[6].textContent = indexnum;
    editedRow.cells[7].textContent = emailid;
    editedRow.cells[8].textContent = monum;
}


